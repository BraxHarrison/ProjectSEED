<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<GridPane fx:controller="GUI.BattleController" xmlns:fx="http://javafx.com/fxml" hgap="1" vgap="1" alignment="CENTER">
    <VBox fx:id="allCharacterVitals" maxWidth="200" spacing="50"/>
    <VBox fx:id="allEnemyVitals" maxWidth="200" GridPane.columnIndex="250" spacing="50" />
    <VBox spacing="20" maxWidth="300" GridPane.columnIndex="100">

        <Label fx:id="mainDisplay" wrapText="true" maxHeight="10" style="-fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;"/>

        <ScrollPane fx:id="historyScroller"  prefHeight="100" maxWidth="300" >
        <Label fx:id="historyDisplay" wrapText="true"/>
    </ScrollPane>

        <ScrollPane fx:id="selectorMenu" prefHeight="100" maxWidth="300"  vvalue="1">
            <HBox fx:id="selectorArea" spacing="30"/>
        </ScrollPane>

        <HBox fx:id="characterMenu" maxWidth="300"  spacing="10">
            <Button fx:id="character1" visible="false" onAction="#selectCharacter1"/>
            <Button fx:id="character2" visible="false" onAction="#selectCharacter2"/>
            <Button fx:id="character3" visible="false" onAction="#selectCharacter3"/>
            <Button fx:id="character4" visible="false" onAction="#selectCharacter4"/>
        </HBox>

        <HBox fx:id="actionMenu" prefWidth="350" visible="false"  spacing="10">
            <Button fx:id="attack" text="Attack" onAction="#selectAttack"/>
            <Button fx:id="skills" text="Skills" onAction="#selectSkill"/>
            <Button fx:id="items" text="Items" onAction="#selectItems"/>
            <Button fx:id="flee" text="Flee" onAction="#selectFlee"/>
        </HBox>

    </VBox>

</GridPane>




