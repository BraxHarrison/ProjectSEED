<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ProgressIndicator?>

<?import javafx.scene.Group?>
<?import javafx.geometry.Insets?>
<StackPane fx:controller="GUI.BattleView" xmlns:fx="http://javafx.com/fxml">


    <Pane fx:id="loaderScreen" maxWidth="900" maxHeight="600">
        <ProgressIndicator fx:id="loader" layoutX="420" layoutY="275"/>
    </Pane>

    <StackPane fx:id="battleDisplay" visible="false">

        <VBox fx:id="allHeroVitals" maxWidth="200" spacing="50"/>
        <VBox fx:id="allEnemyVitals" maxWidth="200" GridPane.columnIndex="250" spacing="50" />
        <VBox spacing="20" maxWidth="300" GridPane.columnIndex="100">

        </VBox>

        <ScrollPane fx:id="historyScroller" visible="false" maxWidth="300" hbarPolicy="NEVER" >
            <Label fx:id="historyDisplay" wrapText="true" maxWidth="295"/>
        </ScrollPane>

        <!--Lots of stuff needs to be moved here-->
        <StackPane fx:id="mainSelectorArea" stylesheets="/stylesheets/pane.css"><!--What is this nonsense?!-->
            <HBox fx:id="selectorBackground"  maxWidth="125" maxHeight="600" StackPane.alignment="CENTER_LEFT" styleClass="pane"/>
            <Button fx:id="backButton" visible="false" text="(Back)" onAction="#goBack" StackPane.alignment="CENTER_LEFT" translateY="120"/>
            <ScrollPane fx:id="selectorMenu" maxHeight="375" prefViewportHeight="200" vbarPolicy="NEVER" maxWidth="125" stylesheets="/stylesheets/scrollpane.css" styleClass="edge-to-edge" StackPane.alignment="TOP_LEFT">
                <content>
                    <StackPane fx:id="selectorHolder">
                        <VBox fx:id="itemSelectorArea" visible="false" prefHeight="600" spacing="40" translateX="30" translateY="15">
                            <children>

                            </children>
                        </VBox>
                        <VBox fx:id="heroSelectorArea" translateX="45" prefHeight="600" translateY="15" spacing="40">
                            <children>

                            </children>
                        </VBox>
                        <VBox fx:id="actionMenu" visible="false" prefHeight="400" translateX="30" translateY="10" spacing="40">

                            <Label fx:id="attack" maxWidth="40" minWidth="40" text="Attack" scaleX="2.2" scaleY="2.2" onMousePressed="#selectAttack" textFill="white"/>
                            <Label fx:id="skills" maxWidth="40" minWidth="40" text="Skills" scaleX="2.2" scaleY="2.2" onMousePressed="#selectSkill" textFill="white"/>
                            <Label fx:id="bag" maxWidth="40" minWidth="40" text="Items" scaleX="2.2" scaleY="2.2" onMousePressed="#selectBag" textFill="white"/>
                            <Label fx:id="flee" maxWidth="40" minWidth="40" text="Flee" scaleX="2.2" scaleY="2.2" onMousePressed="#selectFlee" textFill="white"/>
                            <Label fx:id="endTurn" maxWidth="40" minWidth="40" text="End Turn" scaleX="2.2" scaleY="2.2" onMousePressed="#selectEndTurn" textFill="white"/>

                        </VBox>
                    </StackPane>

                </content>
            </ScrollPane>


            <HBox fx:id="enemySelectorArea" spacing="60" translateX="500" translateY="200">
            </HBox>



        </StackPane>


        <ScrollPane fx:id="textBox" stylesheets="/stylesheets/textBox.css" styleClass="edge-to-edge" maxHeight="150" maxWidth="900" StackPane.alignment="BOTTOM_CENTER">
            <Label fx:id="mainDisplay" wrapText="true" scaleX="2" scaleY="2"  translateX="310" translateY="10" maxWidth="600" minWidth="600" maxHeight="40" minHeight="40" />
        </ScrollPane>
        <StackPane fx:id="infoBox" styleClass="pane" maxHeight="200" maxWidth="200" StackPane.alignment="BOTTOM_RIGHT"/>

        <Label fx:id="tpDisplay" visible="false" text="TP:" GridPane.rowIndex="20" GridPane.columnIndex="80" maxWidth="50" minWidth="50" />
        <ProgressBar fx:id="tpBar" StackPane.alignment="TOP_CENTER" translateX="30" translateY="20" maxWidth="300" maxHeight="50" stylesheets="/stylesheets/tpBar.css" />
        <HBox fx:id="backgroundImage" GridPane.columnIndex="20" GridPane.rowIndex="20">

        </HBox>
    </StackPane>

</StackPane>






