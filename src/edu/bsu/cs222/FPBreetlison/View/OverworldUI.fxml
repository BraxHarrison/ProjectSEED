<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<StackPane fx:controller="edu.bsu.cs222.FPBreetlison.Controller.OverworldView" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <Label fx:id="roomDescription" StackPane.alignment="CENTER" text=""/>
    <Button fx:id="travelButton" StackPane.alignment="BOTTOM_RIGHT" onAction="#openTravel" text="Map"/>
    <StackPane fx:id="travelPane" StackPane.alignment="BOTTOM_RIGHT"  maxHeight="150" maxWidth="150" visible="false">
        <Button fx:id="closeTravelButton" StackPane.alignment="BOTTOM_RIGHT" translateX="0" text="   X   " onAction="#closeTravel"/>
        <Button fx:id="north" StackPane.alignment="TOP_CENTER" translateX="0" translateY="20" text="N" onAction="#travelNorth"/>
        <Button fx:id="south" StackPane.alignment="BOTTOM_CENTER" translateX="0" translateY="-20" text="S"  onAction="#travelSouth"/>
        <Button fx:id="east" StackPane.alignment="CENTER_RIGHT" translateX="-20" translateY="0" text="E"  onAction="#travelEast"/>
        <Button fx:id="west" StackPane.alignment= "CENTER_LEFT" translateX="20" translateY="0" text="W"  onAction="#travelWest"/>
    </StackPane>

    <Button fx:id="clickToBattle" StackPane.alignment="TOP_LEFT" text="Click to start battle" onAction="#startBattle"/>
</StackPane>